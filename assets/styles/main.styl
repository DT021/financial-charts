@import 'nib'

body {
    font-family: helvetica,'lucida grande', tahoma, verdana, arial, sans-serif;
    font-size: 12px;
    text-align: center;
}
#wrapper {
    display: inline-block;
    margin: 0 auto;
    padding: 30px 0 20px;
    text-align: center;
    width: 980px;
}
h1 {
    font-size: 2.6em;
    font-weight: 600;
    line-height: 1em;
    margin-bottom: 20px;
}
sup {
    vertical-align: super;
    font-size: smaller;
}
.graphContainer {
    height: 600px;
    width: 100%;
}

a.chartSubtitle {
    color: #2B4786
    text-decoration: none;
    &:hover {
        color: #4480C1;
    }
}
.infoTextContainer {
    min-height: 3.42em;
}
.infoText {
    border: 1px solid #555;
    display: inline-block;
    font-size: 1.45em;
    height: 1.2em;
    padding: 0.65em 1em 0.25em;
    margin-bottom: 0.15em;
    vertical-align: middle;

    &.correlation {
        line-height: 0.45em;
    }
}
.links {
    font-size: 1.1em;
    margin-top: 1.3em;
    a {
        text-decoration: underline;
    }
    a + a {
        margin-left: .7em;
    }
}
.disclaimer {
    font-size: 0.9em;
    margin-top: 0.7em;
}